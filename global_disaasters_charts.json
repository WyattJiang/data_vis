{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 1000,
  "height": 500,
  "title": {
    "text": "Natural Disaster Occurrences by Country",
    "frame": "group"
  },
  "style": "view",
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/WyattJiang/data_vis/refs/heads/main/COUNTRY_DISASTER_OCCURRENCES_CLEANED_FINAL.CSV",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries",
        "parse": {}
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"NAME\"]",
          "as": "properties.NAME"
        },
        {
          "type": "lookup",
          "from": "source_1",
          "key": "Country",
          "fields": ["properties.NAME"],
          "values": ["Occurrences"]
        },
        {"type": "formula", "expr": "datum.Occurrences", "as": "Occurrences"},
        {
          "type": "filter",
          "expr": "isValid(datum[\"Occurrences\"]) && isFinite(+datum[\"Occurrences\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "data('source_0')"},
      "type": "equalEarth"
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "Occurrences"},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"], \"Occurrences\": format(datum[\"Occurrences\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"Occurrences: \" + (format(datum[\"Occurrences\"], \"\")) + \"; Country: \" + (isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"])"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "log",
      "domain": {"data": "source_0", "field": "Occurrences"},
      "range": ["#ffffcc", "#ff4444", "#800000"],
      "interpolate": "hcl"
    }
  ],
  "legends": [
    {
      "fill": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"},
      "labelOverlap": "greedy",
      "title": "Occurrences"
    }
  ],
  "config": {}
}